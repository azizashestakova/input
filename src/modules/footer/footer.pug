mixin footer
  footer.footer
    .container
      .row
        .col-12.col-md-6
          form.footer__form(action="")
            h2.footer__title Contact us
            input.footer__field(type="email" placeholder="Email...")
            input.footer__field(type="text" placeholder="Subject...")
            textarea.footer__message(placeholder="Message...")
            button.footer__button.button.button_orange Send message
        .col-12.col-md-6
          h2.footer__title Follow us
          ul.footer__social
            li.footer__social-item: a.footer__social-link.footer__social-link_facebook(href="./" target="_blank" title="Facebook"): +icon('facebook', 'footer__social-icon')
            li.footer__social-item: a.footer__social-link.footer__social-link_dribbble(href="./" target="_blank" title="Dribbble"): +icon('dribbble', 'footer__social-icon')
            li.footer__social-item: a.footer__social-link.footer__social-link_twitter(href="./" target="_blank" title="Twitter"): +icon('twitter', 'footer__social-icon')
            li.footer__social-item: a.footer__social-link.footer__social-link_instagram(href="./" target="_blank" title="Instagram"): +icon('instagram', 'footer__social-icon')
            li.footer__social-item: a.footer__social-link.footer__social-link_pinterest(href="./" target="_blank" title="Pinterest"): +icon('pinterest', 'footer__social-icon')
          p.footer__copyright Â© Maren One Page Bootstrap Template #[br] Download it for free on #[a(href="./") AZMIND]
    .footer__top